<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_50"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shap_rec_10dp_userinfo_trans_ee_white_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_room_control_duomic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="夺麦"
                android:textColor="@color/cc_black"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shap_rec_10dp_userinfo_trans_ee_white_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_room_control_shoumic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="收麦"
                android:textColor="@color/cc_black"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shap_rec_10dp_userinfo_trans_ee_white_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_room_control_guanmai"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="管麦"
                android:textColor="@color/cc_black"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shap_rec_10dp_userinfo_trans_ee_white_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_room_control_guanmai_cancle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="取消管麦"
                android:textColor="@color/cc_black"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shap_rec_10dp_userinfo_white_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_room_control_cancle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="取消"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>